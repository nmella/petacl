<config>
    <modules>
        <Fooman_Surcharge>
            <version>3.1.13</version>
        </Fooman_Surcharge>
    </modules>

    <global>
        <models>
            <surcharge>
                <class>Fooman_Surcharge_Model</class>
            </surcharge>
            <paypal>
                <rewrite>
                    <!-- required since only known totals are taken into consideration (no custom totals, no events) -->
                    <hostedpro_request>Fooman_Surcharge_Model_Paypal_Hostedpro_Request</hostedpro_request>
                </rewrite>
            </paypal>
        </models>
        <blocks>
            <surcharge>
                <class>Fooman_Surcharge_Block</class>
            </surcharge>
        </blocks>
        <helpers>
            <surcharge>
                <class>Fooman_Surcharge_Helper</class>
            </surcharge>
            <tax>
                <rewrite>
                    <data>Fooman_Surcharge_Helper_Tax</data>
                </rewrite>
            </tax>
        </helpers>
        <resources>
            <surcharge_setup>
                <setup>
                    <module>Fooman_Surcharge</module>
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </surcharge_setup>
            <surcharge_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </surcharge_write>
            <surcharge_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </surcharge_read>
        </resources>
        <fieldsets>
             <sales_convert_quote>
                <fooman_surcharge_description><to_order>*</to_order></fooman_surcharge_description>
            </sales_convert_quote>
            <sales_convert_quote_address>
                <fooman_surcharge_amount><to_order>*</to_order></fooman_surcharge_amount>
                <base_fooman_surcharge_amount><to_order>*</to_order></base_fooman_surcharge_amount>
                <fooman_surcharge_tax_amount><to_order>*</to_order></fooman_surcharge_tax_amount>
                <base_fooman_surcharge_tax_amount><to_order>*</to_order></base_fooman_surcharge_tax_amount>
            </sales_convert_quote_address>
        </fieldsets>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <fooman_product_surcharge />
                    </product_attributes>
                </item>
                <totals>
                    <fooman_surcharge>
                        <after>nominal,subtotal,msrp,tax_subtotal,freeshipping,weee,shipping,tax_shipping,discount,tax,grand_total,payone_fee,rewardshipping,reward_item,offer,customerreward,giftwrap,payline_nx</after>
                        <class>surcharge/quote_address_total_surcharge</class>
                        <renderer>surcharge/tax_checkout_surcharge</renderer>
                        <admin_renderer>surcharge/adminhtml_sales_order_create_totals_surcharge</admin_renderer>
                    </fooman_surcharge>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <fooman_surcharge>
                        <after>nominal,subtotal,msrp,tax_subtotal,freeshipping,weee,shipping,tax_shipping,discount,tax,grand_total,payone_fee,rewardshipping,reward_item,offer,customerreward,giftwrap,payline_nx</after>
                        <class>surcharge/order_invoice_total_surcharge</class>
                    </fooman_surcharge>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <fooman_surcharge>
                        <after>nominal,subtotal,msrp,tax_subtotal,freeshipping,weee,shipping,tax_shipping,discount,tax,grand_total,payone_fee,rewardshipping,reward_item,offer,customerreward,giftwrap,payline_nx</after>
                        <class>surcharge/order_creditmemo_total_surcharge</class>
                    </fooman_surcharge>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <fooman_surcharge translate="title">
                    <title>Surcharge</title>
                    <source_field>fooman_surcharge_amount</source_field>
                    <model>surcharge/sales_pdf_surcharge</model>
                    <display_zero>0</display_zero>
                    <sort_order>550</sort_order>
                </fooman_surcharge>
            </totals>
        </pdf>
        <events>
            <payment_method_is_active>
                <observers>
                    <surcharge_payment_method_is_active>
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>paymentMethodIsActive</method>
                    </surcharge_payment_method_is_active>
                </observers>
            </payment_method_is_active>
            <sales_quote_collect_totals_before>
                <observers>
                    <resetSurcharge>
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>resetSurcharge</method>
                    </resetSurcharge>
                </observers>
            </sales_quote_collect_totals_before>
            <paypal_prepare_line_items>
                <observers>
                    <addSurchargeToPaypalCart>
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>addSurchargeToPaypalCart</method>
                    </addSurchargeToPaypalCart>
                </observers>
            </paypal_prepare_line_items>
            <adminhtml_sales_order_creditmemo_register_before>
                <observers>
                    <adjustCreditmemoSurcharge>
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>adjustCreditmemoSurcharge</method>
                    </adjustCreditmemoSurcharge>
                </observers>
            </adminhtml_sales_order_creditmemo_register_before>
            <!-- <controller_front_init_before>
                <observers>
                    <surchargeDynamicRewrite>
                        on Magento pre 1.4.1.0 adds a rewrite for Mage_Paypal_Model_Standard
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>controllerFrontInitBefore</method>
                    </surchargeDynamicRewrite>
                </observers>
            </controller_front_init_before> -->
            <core_block_abstract_to_html_before>
                <observers>
                    <adjustSubtotal>
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>adjustSubtotal</method>
                    </adjustSubtotal>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <adjustPaypalTitle>
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>adjustPaypalTitle</method>
                    </adjustPaypalTitle>
                </observers>
            </core_block_abstract_to_html_after>
            <sales_order_invoice_cancel>
                <observers>
                    <surcharge_sales_order_invoice_cancel>
                        <type>singleton</type>
                        <class>Fooman_Surcharge_Model_Observer</class>
                        <method>salesOrderInvoiceCancel</method>
                    </surcharge_sales_order_invoice_cancel>
                </observers>
            </sales_order_invoice_cancel>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <surcharge>
                    <file>surcharge.xml</file>
                </surcharge>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
