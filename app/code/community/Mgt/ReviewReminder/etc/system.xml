<?xml version="1.0"?>
<config>
    <tabs>
        <mgt-commerce translate="label" module="mgt_review_reminder">
            <label>Mgt-Commerce.com</label>
            <sort_order>160</sort_order>
        </mgt-commerce>
    </tabs>
    <sections>
        <mgt-commerce_mgt_review_reminder translate="label" module="mgt_review_reminder">
            <label>Review Reminder</label>
            <tab>mgt-commerce</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <mgt_review_reminder_time_settings translate="label">
                    <label>Time Settings (Days)</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>mgt_review_reminder/adminhtml_system_config_form_fieldset</frontend_model>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <first_notification>
                            <label>First Notification E-Mail After</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgt_review_reminder/config_source_days</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </first_notification>
                        <second_notification>
                            <label>Second Notification E-Mail After</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgt_review_reminder/config_source_days</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </second_notification>
                        <third_notification>
                            <label>Third Notification E-Mail After</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgt_review_reminder/config_source_days</source_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </third_notification>
                    </fields>
                </mgt_review_reminder_time_settings>
                <mgt_review_reminder_general_settings translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>mgt_review_reminder/adminhtml_system_config_form_fieldset</frontend_model>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Review Reminder</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <template translate="label">
                            <label>Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
                        <identity translate="label">
                            <label>Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </identity> 
                    </fields>
                </mgt_review_reminder_general_settings>
            </groups>
        </mgt-commerce_mgt_review_reminder>
    </sections>
</config>
