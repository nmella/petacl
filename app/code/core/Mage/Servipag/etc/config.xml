<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Servipag>
            <version>0.0.1</version>
        </Mage_Servipag>
    </modules>
    <global>
        <models>
            <Servipag>
                <class>Mage_Servipag_Model</class>
                <resourceModel>Servipag_mysql4</resourceModel>
            </Servipag>
            <Servipag_mysql4>
                <class>Mage_Servipag_Model_Mysql4</class>
                <entities>
                    <api_debug><table>Servipag_api_debug</table></api_debug>
                </entities>
            </Servipag_mysql4>
        </models>
        <resources>
            <Servipag_setup>
                <setup>
                    <module>Mage_Servipag</module>
                    <class>Mage_Servipag_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </Servipag_setup>
            <Servipag_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </Servipag_write>
            <Servipag_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </Servipag_read>
        </resources>
        <blocks>
            <Servipag><class>Mage_Servipag_Block</class></Servipag>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <Servipag_standard>/Servipag/standard</Servipag_standard>
        </secure_url>
        <routers>
            <Servipag>
                <use>standard</use>
                <args>
                    <module>Mage_Servipag</module>
                    <frontName>Servipag</frontName>
                </args>
            </Servipag>
        </routers>
        <translate>
            <modules>
                <Mage_Servipag>
                    <files>
                        <default>Mage_Servipag.csv</default>
                    </files>
                </Mage_Servipag>
            </modules>
        </translate>
        <layout>
            <updates>
                <Servipag>
                    <file>Servipag.xml</file>
                </Servipag>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Servipag>
                    <files>
                        <default>Mage_Servipag.csv</default>
                    </files>
                </Mage_Servipag>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <Servipag>
                                            <title>Servipag Section</title>
                                        </Servipag>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <Servipag>

        </Servipag>
        <payment>

            <Servipag_standard>
                  <model>Servipag/standard</model>
                  <title>Servipag Standard</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
                  <order_status>pending_Servipag</order_status>
            </Servipag_standard>
        </payment>
    </default>
</config>
