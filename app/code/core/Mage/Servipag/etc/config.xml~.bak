<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Dineromail>
            <version>0.1.0</version>
        </Mage_Dineromail>
    </modules>
    <global>
        <models>
            <dineromail>
                <class>Mage_Dineromail_Model</class>
                <resourceModel>dineromail_mysql4</resourceModel>
            </dineromail>
            <dineromail_mysql4>
                <class>Mage_Dineromail_Model_Mysql4</class>
                <entities>
                    <api_debug><table>dineromail_api_debug</table></api_debug>
                </entities>
            </dineromail_mysql4>
        </models>
        <resources>
            <dineromail_setup>
                <setup>
                    <module>Mage_Dineromail</module>
                    <class>Mage_Dineromail_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dineromail_setup>
            <dineromail_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </dineromail_write>
            <dineromail_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </dineromail_read>
        </resources>
        <blocks>
            <dineromail><class>Mage_Dineromail_Block</class></dineromail>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <dineromail_standard>/Dineromail/standard</dineromail_standard>
        </secure_url>
        <routers>
            <dineromail>
                <use>standard</use>
                <args>
                    <module>Mage_Dineromail</module>
                    <frontName>dineromail</frontName>
                </args>
            </dineromail>
        </routers>
        <translate>
            <modules>
                <Mage_Dineromail>
                    <files>
                        <default>Mage_Dineromail.csv</default>
                    </files>
                </Mage_Dineromail>
            </modules>
        </translate>
        <layout>
            <updates>
                <dineromail>
                    <file>dineromail.xml</file>
                </dineromail>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Dineromail>
                    <files>
                        <default>Mage_Dineromail.csv</default>
                    </files>
                </Mage_Dineromail>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <dineromail>
                                            <title>Dineromail Section</title>
                                        </dineromail>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <dineromail>

        </dineromail>
        <payment>

            <dineromail_standard>
                  <model>dineromail/standard</model>
                  <title>DineroMail Standard</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
                  <order_status>pending_dineromail</order_status>
            </dineromail_standard>
        </payment>
    </default>
</config>
