    // Error Messages
    // Reason Old
    $oldTitle_Str       = 'License Error';
    $oldMessage_Str     = 'An error ocurred with your license.<br/><br/>Reference Error: L00.';
    $oldLinkMessage_Str = 'Contact ThirdLevel and inform this error and its reference.';

    // Reason Invalid
    $invalidTitle_Str       = 'Invalid License';
    $invalidMessage_Str     = 'Your license key is invalid.<br/><br/>Reference Error: L01.';
    $invalidLinkMessage_Str = 'Access our system, click on Serviços > Meus Serviços and check your license key.';

