        } else {
            $j.ajax({
                timeout:1000000,
                type: "GET",
                dataType: 'html',
                url: "<?php echo $this -> getMercadolivreAttributeValueUrl(); ?>mlid/"+id+"/catid/"+cat+"/storeid/"+storeid,
                beforeSend: function () {
                    $j( "#loading-mask" ).show();
                }
            }).done(function(data) {
                $j( "#loading-mask" ).hide();
                $j(place).html(data);

            });
        }

    }


